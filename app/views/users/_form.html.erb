<% if type == :new %>
  <% action_url = users_url %>
  <% button_text = "Sign Up" %>
<% elsif type == :edit %>
  <% action_url = user_url(user) %>
  <% button_text = "Transfigure Wizzy" %>
<% end %>

<form action="<%= action_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="username">Username: </label>
  <input type="text" id="username" name="user[username]" value="<%= user.username %>">
  <br>
  <label for="email">Email:
    <input type="text" name="user[email]" value="<%= user.email %>">
  </label>
  <br>
  <label for="age">Age:
    <input type="text" name="user[age]" value="<%= user.age %>">
  </label>
  <br>
  <label for="political_affiliation">Political Affiliation:
    <input type="text" name="user[political_affiliation]" value="<%= user.political_affiliation %>">
  </label>
  <br>
  <label for="password">Password:
    <input type="password" name="user[password]" value="<%= %>">
  </label>
  <br>
  <input type="submit" value="<%= button_text %>">
</form>
